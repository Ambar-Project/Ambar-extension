{
  "name": "ambar-extension",
  "displayName": "Ambar - C++ Energy Analyzer",
  "description": "Extensão do VS Code que analisa código C++ em tempo real, avaliando sua eficiência energética. Classifica o código conforme o consumo potencial de recursos e destaca trechos de alto custo, sugerindo otimizações para reduzir gasto de energia e melhorar o desempenho de forma sustentável sem comprometer a funcionalidade.",
  "version": "1.0.4",
  "publisher": "AmbarExtension",
  "icon": "logoAmbar.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ambar-Project/Ambar-extension.git"
  },
  "keywords": [
    "cpp",
    "c++",
    "energy",
    "performance",
    "sustainability",
    "optimization",
    "green-computing"
  ],
  "author": "Ambar Project",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ambar-Project/Ambar-extension/issues"
  },
  "homepage": "https://github.com/Ambar-Project/Ambar-extension#readme",
  "contributes": {
    "commands": [
      {
        "command": "ambar-extension.analyzeFile",
        "title": "Analisar Consumo Energético",
        "category": "Ambar"
      },
      {
        "command": "ambar-extension.toggleAnalysis",
        "title": "Ativar/Desativar Análise em Tempo Real",
        "category": "Ambar"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ambar-extension.analyzeFile",
          "when": "resourceExtname == .cpp || resourceExtname == .cc || resourceExtname == .cxx",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Ambar - C++ Energy Analyzer",
      "properties": {
        "ambar.enableRealTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Ativar análise em tempo real"
        },
        "ambar.highlightSeverity": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "default": "medium",
          "description": "Nível mínimo para destacar problemas"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/vscode": "^1.102.0",
    "typescript": "^5.9.2",
    "tree-sitter": "^0.22.4",
    "tree-sitter-cpp": "^0.23.4"
  }
}
